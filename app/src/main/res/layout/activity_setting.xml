<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/huiBai"
        android:orientation="vertical">
        <include layout="@layout/activity_head_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:text="提示"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="@color/red"
            android:text="在获取数据的时候会显示6个计算结果,您可自定义这6个数据。如您未设置，\n则默认为下面列表中的前6项。"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/nocolor"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/selects"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/nocolor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/selectNum"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="已选择0项"
                android:gravity="center"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/sureSelect"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:text="确定"
                android:background="@color/green"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
