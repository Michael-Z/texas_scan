<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20px"
    android:background="@color/statusBarColor"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="8px"
        android:adjustViewBounds="true"
        android:background="@drawable/icon_128" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text="德扑数据大师"
            android:textSize="30px" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <AutoCompleteTextView
            android:id="@+id/etusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"
            android:drawableLeft="@drawable/username"
            android:drawablePadding="14px"
            android:maxLength="11"
            android:hint="手机号:"
            android:textSize="24px"
            android:inputType="textPersonName"
            android:textColorHint="#918d8d"
          />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/password"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:drawablePadding="13px"
            android:ems="10"
            android:maxLength="10"
            android:inputType="textPassword"
            android:hint="密码:"
            android:textSize="24px"
            android:textColorHint="#918d8d"
            android:layout_alignTop="@+id/Imgeyes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <CheckBox
            android:id="@+id/Imgeyes"
            android:layout_width="40px"
            android:layout_height="20px"
            android:background="@drawable/eyestrue"
            android:button="@null"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textColor="#85c6e1"
            android:id="@+id/rember"
            android:textSize="28px"
            android:background="#00000000"
            android:layout_marginLeft="25px"
            android:layout_centerVertical="true" />
        <Button
            android:id="@+id/btfindmima"
            android:layout_width="wrap_content"
            android:layout_height="45px"
            android:layout_gravity="end"
            android:background="#00000000"
            android:layout_marginRight="25px"
            android:text="找回密码?"
            android:gravity="center"
            android:textColor="#cc9966"
            android:textSize="28px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">
    <Button
        android:id="@+id/btlogin"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="5px"
        android:background="@drawable/buttonstyle"
        android:text="登 录"
        android:textSize="30px" />
</LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20px"
    android:layout_weight="1">
    <Button
        android:id="@+id/btzhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00000000"
        android:text="快速注册"
        android:layout_gravity="center"
        android:textSize="28px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:layout_weight="1">
        <Button
            android:id="@+id/btjihuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="激活软件"
            android:layout_gravity="center"
            android:textSize="24px"
            android:textColor="#cc9966"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>