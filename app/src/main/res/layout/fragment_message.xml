<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/huiBai"
    android:orientation="vertical">
    <include layout="@layout/activity_head_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg_color"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_overlay"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"/>

        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginBottom="10px">
           <TextView
               android:layout_width="0px"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:textColor="@color/white"
               android:gravity="center"
               android:textSize="20px"
               android:text="W/L/ALL(胜/负/总手数)"/>
           <TextView
               android:layout_width="0px"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:textSize="20px"
               android:textColor="@color/white"
               android:gravity="center"
               android:text="3BET(翻牌前再加注率)"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="5px"
                android:textSize="20px"
                android:textColor="@color/white"
                android:text="AF(翻牌后Call/Raise概率)" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px">
            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20px"
                android:text="VPIP(入局率)"/>
            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20px"
                android:textColor="@color/white"
                android:text="STL(偷盲率)"/>
            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20px"
                android:textColor="@color/white"
                android:text="Fold STL(被偷盲率)"/>
        </LinearLayout>
        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginBottom="20px">
           <TextView
               android:layout_width="0px"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:textSize="20px"
               android:textColor="@color/white"
               android:text="PFR(翻前加注率)"/>
           <TextView
               android:layout_width="0px"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:textColor="@color/white"
               android:textSize="20px"
               android:text="F3BET(面对3Bet弃牌率)"/>

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="5px"
                android:textColor="@color/white"
                android:textSize="20px"
                android:text="CB(翻牌圈继续下注率)" />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/playerAppList"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="40px"
        android:layout_height="60px"/>

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tr_bottom_height="50px"
        app:tr_head_height="50px">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/playerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

</LinearLayout>
